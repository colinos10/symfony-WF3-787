{% extends 'baseAdmin.html.twig' %}

{% block title %}utilisateurs{% endblock %}

{% block body %}

    <h1 class="pb-5">Liste des utilisateurs</h1>

    <table class="table table-bordered table-dark text-center table-hover table-sm">
        <thead>
            <tr>
                <th>N°</th>
                <th>Email</th>
                <th>Rôle(s)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td class="align-middle">{{ loop.index }}</td>
                    <td class="align-middle">{{ user.email }}</td>
                    <td class="align-middle">{{ user.roles|join(' + ')|lower }}</td>
                    <td class="align-middle">

                        <a href="{{ path('admin_users_update', {'id':user.id}) }}"><i class="fas fa-pen-square"></i></a>

                        <a href="{{ path('admin_users_delete', {'id':user.id}) }}"><i class="fas fa-trash-alt"></i></a>

                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
